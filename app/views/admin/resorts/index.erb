<% content_for :content do %>
  <h2>Recursos</h2>

    <table class="table table-bordered table-striped">
      <tr>
        <th>Name</th>
        <th>Negocio</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% for resort in @resorts %>
        <tr>
          <td><%= resort.name %></td>
          <td><%= resort.store.name %></td>
          <td><%= link_to "Modificar", edit_admin_resort_path(resort) %></td>
          <td><%= link_to "Borrar", admin_resort_path(resort), :confirm => 'Estas seguro?', :method => :delete %></td>
          <td><%= link_to 'Oferta Servicios', admin_resort_offers_path(resort) %></td>
        </tr>
      <% end %>
    </table>
    <br />
    <br />
    <p><%= link_to "Nuevo Recurso", new_admin_resort_path %></p>

<% end %>

