- content_for :content do
  %h3
    Resumen Mensual del Negocio
    = @store.name.titleize
    
  %br
  %table.table.table-bordered.table-striped
    %tr
      %td{:style => "text-align:center;"} Mes
      %td{:style => "text-align:center;"}
        = (l Date.today, :format => "%B").capitalize
      %td{:style => "text-align:center;"}
        AÃ±o
        = Date.today.strftime("%Y")
    %tr
      %td Total Reservas
      %td
        = @books.count
      %td Regla Negocios
      %td
        = number_to_percentage(@business_rule.rule, :precision => 2)
    - @books_by_resort.each do |book|
      %tr
        %td
          = book.name.titleize
        %td
          = book.count
        %td
          = number_to_currency(book.cost)
        %td
          = number_to_currency(book.count.to_i * @business_rule.rule.to_f * book.cost.to_f / 100)
    %tr
      %td{:colspan => 3} Total
      %td
        = number_to_currency(@total) 
    
