<%= simple_form_for [:admin, @book], :html => { :class => "form-horizontal" } do |f| %>
  <% if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <p><%= f.error_notification %></p>
    </div>
  <% end %>
  <%= f.label "Fecha Reserva" %>
  <%= f.text_field :day %>
  <div id="freeIntervals">
    <%= render :partial => 'intervals' %>
  </div>
  <div id="extrasIntervals">
    <%= render :partial => "services_extras" %>
  </div>
  <%= f.label "Cliente" %>
  <%= f.text_field :user_token, :input_html => {"data-pre" => @users.to_json} %>
  </br>
  </br>
  </br>
  <%= f.button :submit, :class => "btn-primary" %>
<% end -%>

