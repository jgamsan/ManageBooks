<%= simple_form_for [:admin, @book], :html => { :class => "form-stacked" } do |f| %>
  <% if f.error_notification %>
    <div class="alert-message warning fade in" data-alert="alert">
      <a class="close" href="#">Ã—</a>
      <p><%= f.error_notification %></p>
    </div>
  <% end %>
  <div class="row">
    <div class="span4">
      <div class="clearfix">
        <%= f.input :day, :as => :string %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.select :interval_id, grouped_options_for_select(@intervals) %>
    </div>
  </div>
  <div class="actions">
    <%= f.button :submit, :class => "btn primary" %>
  </div>
<% end -%>
