<%= simple_form_for [:admin, @book], :html => { :class => "form-horizontal" } do |f| %>
  <% if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <p><%= f.error_notification %></p>
    </div>
  <% end %>
  <div class="row">
    <div class="span4">
      <%= f.input :day, :as => :string, :label => "Fecha Reserva" %>
      <div id="freeIntervals">
        <%= render :partial => 'intervals' %>
      </div>
      <%= f.input :user_token, :label => "Cliente", :input_html => {"data-pre" => @users.to_json} %>
    </div>
  </div>
    <%= f.button :submit, :class => "btn-primary" %>
<% end -%>

