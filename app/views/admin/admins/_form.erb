<%= simple_form_for([:admin, @admin], :html => { :class => "form-stacked" }) do |f| %>
  <% if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <p><%= f.error_notification %></p>
    </div>
  <% end %>
  <div class="row">
    <div class="span4">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :role, :collection => Admin::ROLES %>
      <%= f.input :status, :as => :boolean %>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit, :class => "primary" %>
  </div>
<% end %>

