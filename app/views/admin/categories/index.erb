<% content_for :content do %>
  <h2>Categorias</h2>

    <table class="table table-bordered table-striped">
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% for category in @categories %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to "Show", admin_category_path(category) %></td>
          <td><%= link_to "Edit", edit_admin_category_path(category) %></td>
          <td><%= link_to "Destroy", admin_category_path(category), :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
      <% end %>
    </table>
    <br />
    <br />
    <p><%= link_to "Nueva Categoria", new_admin_category_path %></p>

<% end %>
