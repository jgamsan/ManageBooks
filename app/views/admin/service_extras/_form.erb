<%= simple_form_for [:admin, @service_extra], :html => { :class => "form-stacked" } do |f| %>
  <div class="row">
    <div class="span4">
      <div class="clearfix">
        <div class="input">
          <%= f.input :name %>
        </div>
      </div>
      <div class="clearfix">
        <div class="input">
          <%= f.input :lasting, :input_html => { :class => 'span2' } %>
        </div>
      </div>
      <div class="clearfix">
        <div class="input">
          <%= f.input :cost, :input_html => { :class => 'span2' } %>
        </div>
      </div>
      <div class="clearfix">
        <div class="input">
          <%= f.association :store, :input_html => { :class => 'medium' } %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit, :class => "btn primary" %>
  </div>
<% end %>

