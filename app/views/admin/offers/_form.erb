    <div class="alert-message warning fade in" data-alert="alert">
      <a class="close" href="#">Ã—</a>
      <p><%= f.error_notification %></p>
    </div>
  <% end %>
  <div class="row">
    <div class="span4">
      <div class="clearfix">
        <div class="input">
          <%= f.input :enable %>
        </div>
      </div>
      <div class="clearfix">
        <div class="input">
          <%= f.input :hduration %>
        </div>
      </div>
      <div class="clearfix">
