<div class="row" id="list">
  <div class="span10 offset3">
    <% unless @books.empty? %>
      <table>
        <tr>
          <th>Donde</th>
          <th>Dia Cita</th>
          <th>Hora Cita</th>
          <th>Reserva</th>
        </tr>
        <% @books.each do |book| %>
            <tr>
              <td> <%= book.resort.store.name.capitalize %></td>
              <td><%= l book.day, :format => "%A, %d de %B de %Y" %></td>
              <td>
                <%= book.interval.init.strftime("%H:%M") %> - <%= book.interval.end.strftime("%H:%M") %>
              </td>
              <td><%= book.resort.name.capitalize %></td>
            </tr>
        <% end %>
      </table>
    <% else %>
      <h2>No Tiene Reservas</h2>
    <% end %>

  </div>
</div>