<div class="row" id="information">
  <h3 style="text-align: center"><%= @resort.name %>(Vista Diaria)</h3>
  <div class="span3">
    <%= link_to image_tag("calendar_alt_fill_24x24.png"), view_weekly_path(@resort.id, Date.today), :remote => true %>
  </div>
</div>
<div id="daily">
  <div class="row" id="vista">
    <div class="span3">
      <%#= link_to image_tag("arrow_left_24x24.png"), {:controller => "books", :action => "change_day", :id => @resort.id, :gd => Date.today - 1.day}, :remote => true %>
    </div>
    <div class="span8">
      <h4 style="text-align: center"><%= l Date.today, :format => "%A, %d de %B de %Y" %></h4>
    </div>
    <div class="span3">
      <%= link_to image_tag("arrow_right_24x24.png"), {:controller => "books", :action => "change_day", :id => @resort.id, :gd => Date.today + 1.day}, :remote => true %>
    </div>
  </div>
  <div class="row" id="list">
    <div class="span6 offset1">
      <table>
        <tr>
          <th>Hora Cita</th>
          <th>Reserva</th>
        </tr>
        <% @intervals.each do |interval| %>
            <tr>
              <td>
                <%= interval.init.strftime("%H:%M") %> - <%= interval.finish.strftime("%H:%M") %>
              </td>
              <td><%= link_to (image_tag "check_green_alt_24x24.png"), get_book_path(interval.id, Date.today), :remote => true %></td>
            </tr>
        <% end %>
      </table>
    </div>
    <div class="span5 offset2" id="services"></div>
  </div>
</div>

