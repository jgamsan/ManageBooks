<!DOCTYPE html>

<html lang="<%= I18n.locale %>">

<head>
  <%= render 'admin/shared/head' %>
</head>

<body style="padding-top: 60px">

  <div class="topbar">
    <div class="topbar-inner">
      <div class="container-fluid">
        <a class="brand" href="#">Panel administracion de WebReserva</a>
        <ul class="nav">
          <li><%= link_to 'Salir', destroy_admin_admin_session_path %></li>
        </ul>
        <p class="pull-right">
          Logged in as
          <a><%= current_admin_admin.nombre_completo %></a>
        </p>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="sidebar">
      <div class="well">
        <%= render :partial => "admin/dashboard/sidebard" %>
      </div>
    </div>
    <div class="content">
      <div class="hero-unit">
        <% if notice %>
          <div class="alert-message success fade in" data-alert="alert">
            <a class="close" href="#">Ã—</a>
            <p><%= notice %></p>
          </div>
        <% end %>
        <%= yield :content %>
      </div>
      <div id="footer">
        <p>@ Webreserva 2012</p>
      </div>
    </div>
  </div>

</body>

</html>
