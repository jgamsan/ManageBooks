<!DOCTYPE html>
<html>
<head>
  <title>WebReserva - La Web de las Reservas OnLine</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= gflash %>
  <div class="navbar navbar-fixed-top menu">
      <% unless current_user %>
      <ul class="nav nav-pills">
        <li>
          <%= link_to image_tag("edit.png", :alt => "Registrarse", :title => "Registrarse", :size => "32x32"), new_identity_path %>
        </li>
        <li>
          <a href="/auth/facebook">
            <%= image_tag("facebook_32.png", :alt => "Facebook", :title => "Facebook") %>
          </a>
        </li>
        <li>
          <a href="/auth/google_oauth2">
            <%= image_tag('google_32.png', :alt => "Google", :title => "Google")%>
          </a>
        </li>
        <li>
          <a href="/auth/twitter">
            <%= image_tag('twitter_32.png', :alt => "Twitter", :title => "Twitter")%>
          </a>
        </li>
        <li>
          <a href="/auth/github">
            <%= image_tag('github_32.png', :alt => "Github", :title => "Github")%>
          </a>
        </li>
        <li style="float:right;"><%= render :partial =>  'welcome/form' %></li>
      </ul>
    <% else -%>
        <ul class="nav nav-pills">
          <li>
            <%= link_to image_tag("info_16x32.png", :alt => "Reservas", :title => "Reservas Vigentes"), books_list_books_path, :remote => true %>
          </li>
          <li>
            <%= link_to image_tag("unlock_fill_24x32.png", :alt => "Logout", :title => "Salir"), logout_path %>
          </li>
        </ul>
        <p class="navbar-text pull-right"><%= link_to image_tag("user_24x32.png", :alt => "Usuario"), '#'  %><%= current_user.name %></p>
    <% end -%>
    </div>
    
  <div class="container-fluid" >
    <div class="row-fluid">
      <div class="span2">
        <div class="well sidebar-nav"><%= render :partial => 'welcome/categories' %></div>
        <div class="well sidebar-nav" id="bycategory"></div>
        <div class="well sidebar-nav" id="bystore"></div>
      </div>
      <div class="span10">
        <div class="hero-unit", id="content-main">
          <%= gmaps4rails(@json) %>
        </div>
        <footer><p>&copy; Galisports 2011</p>
          <%= yield :scripts %>
          <p>
            <a href="http://validator.w3.org/check?uri=referer"><img src="http://www.w3.org/Icons/valid-xhtml10" alt="Valid XHTML 1.0 Strict" height="31" width="88" /></a>
            <a href="http://jigsaw.w3.org/css-validator/check/referer">
              <img style="border:0;width:88px;height:31px" src="http://jigsaw.w3.org/css-validator/images/vcss-blue" alt="¡CSS Válido!" />
            </a>
          </p>
        </footer>
      </div>
    </div>
  </div>
</body>
</html>

